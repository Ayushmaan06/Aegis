datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Application {
  id        String           @id @default(uuid())
  name      String
  url       String
  owner     String
  createdAt DateTime         @default(now())
  findings  Finding[]
  risks     RiskAssessment[]
}

model Finding {
  id                 String              @id @default(uuid())
  applicationId      String
  application        Application         @relation(fields: [applicationId], references: [id])
  type               String
  severity           String // LOW, MEDIUM, HIGH, CRITICAL
  description        String
  status             String // OPEN, FIXED, FALSE_POSITIVE
  detectedAt         DateTime            @default(now())
  complianceMappings ComplianceMapping[]
}

model RiskAssessment {
  id            String      @id @default(uuid())
  applicationId String
  application   Application @relation(fields: [applicationId], references: [id])
  score         Int
  level         String // LOW, MEDIUM, HIGH, CRITICAL
  assessedAt    DateTime    @default(now())
}

model ComplianceStandard {
  id       String              @id @default(uuid())
  name     String // e.g., "OWASP Top 10", "ISO 27001"
  version  String
  mappings ComplianceMapping[]
}

model ComplianceMapping {
  id         String             @id @default(uuid())
  findingId  String
  finding    Finding            @relation(fields: [findingId], references: [id])
  standardId String
  standard   ComplianceStandard @relation(fields: [standardId], references: [id])
  controlId  String // The specific control e.g., "A.5.3"
}

model Incident {
  id          String   @id @default(uuid())
  title       String
  description String
  severity    String
  status      String // OPEN, INVESTIGATING, RESOLVED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  responseLog String?
}

model SecurityEvent {
  id            String   @id @default(uuid())
  applicationId String?
  eventType     String // LOGIN_FAILED, API_ACCESS, PASSWORD_RESET
  ipAddress     String
  userAgent     String?
  timestamp     DateTime @default(now())
  metadata      Json? // Store additional context
}

model ThreatAlert {
  id          String   @id @default(uuid())
  type        String // BRUTE_FORCE, SUSPICIOUS_IP
  severity    String // LOW, MEDIUM, HIGH, CRITICAL
  description String
  status      String // OPEN, INVESTIGATING, RESOLVED
  createdAt   DateTime @default(now())
  metadata    Json?
}
